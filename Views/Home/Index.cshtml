@model IEnumerable<WhatNotToWatch.Models.TVShow>

@{
    ViewData["Title"] = "What Not To Watch";
}

<h1>What Not To Watch</h1>

<div class="row">
    <div class="col-lg-12"> <h2>Write a New Review</h2> </div>
    <h5>
        There are a lot of great TV Shows out there, but there are even more TV shows that aren't worth the time to watch.
        Let us know what you think by adding a review! 
        But be careful, anyone can vote on the quality of your review and if the vote count reaches "-5" your review will be removed.
    </h5><br />
    <a asp-action="Create" class="btn btn-default">Add Review</a>
</div>
<div class="row">
    <div class="col-lg-12"> <h2>Browse Reviews</h2> 
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Review)
                </th>
                <th>
                    Votes for this Review
                </th>
            </tr>

            @foreach (var tvshow in Model)
            {
                <tr>
                    <td class="showName">
                        @Html.DisplayFor(modelItem => tvshow.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => tvshow.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => tvshow.Rating)
                    </td>
                    <td class="review">
                        @Html.DisplayFor(modelItem => tvshow.Review)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@tvshow.ID">@tvshow.Vote</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>