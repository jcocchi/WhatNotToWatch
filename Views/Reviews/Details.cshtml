@using WhatNotToWatch.Models
@model TVShow

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title> @Model.Name </title>
</head>
<body>
    <h1> @Model.Name </h1>

    <p>
        @Html.LabelFor(m => m.Name) @Model.Name
    </p>

    <p>
        @Html.LabelFor(m => m.Genre) @Model.Genre
    </p>

    <p>
        @Html.LabelFor(m => m.Rating) @Model.Rating
    </p>

    <p>
        @Html.LabelFor(m => m.Review) @Model.Review
    </p><br>

    <a asp-action="Index" class="btn btn-default">Browse All Reviews</a> 
    <a asp-controller="Home" asp-action="Index" class="btn btn-default">Back to Home</a>

</body>
</html>